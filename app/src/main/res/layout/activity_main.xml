<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#009688">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="2dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ScrollingTechniques"
            android:textColor="#fff"
            android:textSize="22sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_lay"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toolbar_off_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="8dp"
            android:background="@drawable/button_background"
            android:text="Toolbar Off Screen"
            android:textColor="#212121"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/toolbar_off_with_tab_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Toolbar Off Screen With Tab"
            android:textColor="#212121"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/flexible_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Flexible Space"
            android:textColor="#212121"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/flexible_space_with_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Flexible Space With Image"
            android:textColor="#212121"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
